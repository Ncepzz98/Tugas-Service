<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="241dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            app:srcCompat="@drawable/logo_uty" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acep Nur Rohim"
            android:textSize="20sp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Universitas Teknologi Yogyakarta"
            android:textSize="15sp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="106dp"
                android:layout_height="68dp"
                android:layout_weight="1"
                android:background="@drawable/fb"
                android:text="" />

            <Button
                android:id="@+id/btn_ig"
                android:layout_width="130dp"
                android:layout_height="168dp"
                android:layout_weight="1"
                android:background="@drawable/ig"
                android:text="" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MP3 Player"
            android:textColor="#4CAF50"
            android:textSize="20sp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_play"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/play_btn"
                android:text="" />

            <Button
                android:id="@+id/btn_pause"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/pause_btn"
                android:text="" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="80dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/stop_btn"
                android:text="Stop" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>